<Window x:Class="MockSAP.ModifyBuyer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MockSAP - Modify Buyer" Height="345.2" Width="502.4" Background="Aquamarine" Closed="Window_Closed">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Modify Buyer Data" VerticalAlignment="Top" FontSize="25" FontFamily="Segoe UI Black" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="106,57,0,0" TextWrapping="Wrap" Text="Buyer ID : " VerticalAlignment="Top"/>
        <TextBox x:Name="buyer_id" HorizontalAlignment="Left" Height="23" Margin="173,57,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" MaxLength="4" Width="120"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Buyer Name : " VerticalAlignment="Top" Margin="86,99,0,0"/>
        <TextBox x:Name="buyer_name" HorizontalAlignment="Left" Height="23" Margin="173,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="50" Width="179"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Buyer Address : " VerticalAlignment="Top" Margin="75,139,0,0"/>
        <TextBox x:Name="buyer_address" HorizontalAlignment="Left" Height="61" Margin="173,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="50"  Width="179"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Buyer Phone Number : " VerticalAlignment="Top" Margin="38,216,0,0"/>
        <TextBox x:Name="buyer_phone" HorizontalAlignment="Left" Height="23" Margin="173,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="10" Width="120"/>
        <Button x:Name="modify_buyer" Click="modify_buyer_Click" Content="Modify Buyer" HorizontalAlignment="Left" Margin="173,259,0,0" VerticalAlignment="Top" Width="104"/>

    </Grid>
</Window>
