<Window x:Class="MockSAP.NewVendor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MockSAP - New Vendor" Height="345.2" Width="502.4" Background="Aquamarine" Closed="Window_Closed">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="New Vendor" VerticalAlignment="Top" FontSize="25" FontFamily="Segoe UI Black" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="80,58,0,0" TextWrapping="Wrap" Text="Enter Vendor ID : " VerticalAlignment="Top"/>
        <TextBox x:Name="vendor_id" HorizontalAlignment="Left" Height="23" Margin="173,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="4" Width="120"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter Vendor Name : " VerticalAlignment="Top" Margin="60,100,0,0"/>
        <TextBox x:Name="vendor_name" HorizontalAlignment="Left" Height="23" Margin="173,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="50" Width="179"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter Vendor Address : " VerticalAlignment="Top" Margin="44,139,0,0"/>
        <TextBox x:Name="vendor_address" HorizontalAlignment="Left" Height="61" Margin="173,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="50"  Width="179"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter Vendor Phone Number : " VerticalAlignment="Top" Margin="11,216,0,0"/>
        <TextBox x:Name="vendor_phone" HorizontalAlignment="Left" Height="23" Margin="173,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="10" Width="120"/>
        <Button x:Name="add_vendor" Click="add_vendor_Click" Content="Add Vendor" HorizontalAlignment="Left" Margin="173,259,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
